<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/ff.background</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="FFTheme" parent="AppTheme"/>

    <style name="FFTheme.Splash">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="colorAccent">@color/colorAccentHolo</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryHolo</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryHolo</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <!-- API Level 19+ -->
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="FFTheme.Main">
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
    </style>

    <style name="FFTheme.SignIn">
        <item name="colorPrimary">#449fe0</item>
        <item name="colorPrimaryDark">#449fe0</item>
        <item name="colorAccent">@color/ff.white</item>
    </style>

    <style name="FFDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ff.divider.height</item>
        <item name="android:background">@color/ff.divider</item>
    </style>

    <style name="FFTextAppearance"/>

    <style name="FFTextAppearance.Splash">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ff.splash.text</item>
        <item name="android:textColorHint">@color/ff.splash.text_hint</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FFButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:padding">@dimen/ff.padding.small</item>
        <item name="android:textSize">@dimen/ff.textSize.button</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="FFButton.About">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text_color_primary_theme</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
